<%- model_class = Account.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
    <%counter=0%>
    <% @accounts.each_with_index do |account, i| %>
    <%if i%3==0 %><div class='row'><% end %>
      <div class='span3 well'>
        <%= image_tag(account.twi_profile_img_url) %>
        <h1 style='display: inline'><%= link_to account.name, account_path(account) %></h1>
        <h4><%= account.unanswered %> new</h4>
      </div>
    <%if i%3==2 %></div><% end %>
    <%counter=i %>
    <% end %>
    <%unless counter%3==2 %></div><% end %>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_account_path,
            :class => 'btn btn-primary' %>
